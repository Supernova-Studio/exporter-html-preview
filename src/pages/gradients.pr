<!DOCTYPE html>
<html>
  {[ inject "header.pr" context @init.dictionary() /]}    
  <body>
    <div class="wrapper">
      {[ inject "menu.pr" context @init.dictionary().add("selected", "Gradients") /]}
      <div class="content">
        <h1>Gradient Tokens</h1>
        {[ for group in @ds.tokenGroupsOfType("Gradient") ]}
        <div class="token-container">
          <h2>{{ @js.formattedGroupHeader(group, true) }}</h2>
        
          <table class="token-wrapper">
          {[ for token in @ds.tokensByGroupId(group.id) ]}
            <tr class="gradient">
              <td>
                <div class="token-preview-container" style="background: {{ @js.gradientValue(token) }}"></div>
              </td>
              <td>{{ token.name }}</td>
              <td>{{ @js.gradientDescription(token) }}</td>
              <td>{{ token.description }}</td>
            </tr>
          {[/]}
          </table>
        </div>
        {[/]}
      </div>
    </div>
  </body>
</html>
